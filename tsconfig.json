{
    "include": ["src/**/*"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "jsx": "react",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "plugins": [
            {
                "name": "typescript-lit-html-plugin"
            }
        ]
    }
}
