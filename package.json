{
    "name": "ehsyringe",
    "displayName": "EhSyringe",
    "version": "1.3.1",
    "description": "E 站注射器，将中文翻译注入到 E 站体内。",
    "author": "EhTagTranslation",
    "main": "syringe.js",
    "scripts": {
        "prestart": "yarn clean",
        "start": "webpack --mode=development --watch",
        "start:ext": "yarn start --web-ext",
        "start:chrome": "yarn start:ext --vendor=chrome",
        "start:firefox": "yarn start:ext --vendor=firefox",
        "prebuild": "yarn clean",
        "build": "webpack --mode=production",
        "build:ext": "yarn build --web-ext",
        "build:chrome": "yarn build:ext --vendor=chrome && web-ext build -s dist -a releases -n ehsyringe.chrome.zip -o",
        "build:firefox": "yarn build:ext --vendor=firefox && web-ext build -s dist -a releases -n ehsyringe.firefox.zip -o",
        "update-db": "node ./tools/update-db.js",
        "lint": "prettier --check . && eslint ./src/**/*.ts",
        "lint:fix": "prettier --write . && eslint --fix ./src/**/*.ts",
        "clean": "rimraf dist release"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EhTagTranslation/EhSyringe.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/EhTagTranslation/EhSyringe/issues"
    },
    "readme": "https://github.com/EhTagTranslation/EhSyringe",
    "homepage": "https://github.com/EhTagTranslation/EhSyringe",
    "devDependencies": {
        "@types/chrome": "^0.0.121",
        "@types/escape-html": "^1.0.0",
        "@types/node": "^14.0.23",
        "@types/pako": "^1.0.1",
        "@types/tampermonkey": "^4.0.0",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "copy-webpack-plugin": "^6.0.3",
        "css-loader": "^3.6.0",
        "cssnano": "^4.1.10",
        "eslint": "^7.5.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "file-loader": "^6.0.0",
        "keypair": "^1.0.1",
        "less": "^3.12.2",
        "less-loader": "^6.2.0",
        "node-fetch": "^2.6.0",
        "postcss-cssnext": "^3.1.0",
        "postcss-import": "^12.0.1",
        "postcss-loader": "^3.0.0",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "style-loader": "^1.2.1",
        "ts-loader": "^8.0.1",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "type-fest": "^0.16.0",
        "typescript": "^3.9.7",
        "typescript-lit-html-plugin": "^0.9.0",
        "url-loader": "^4.1.0",
        "web-ext": "^4.3.0",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "webpack-userscript": "^2.5.4",
        "webpack-webextension-plugin": "^0.2.0",
        "yargs": "^15.4.1"
    },
    "dependencies": {
        "emoji-regex": "^9.0.0",
        "escape-html": "^1.0.3",
        "lit-element": "^2.3.1",
        "lit-html": "^1.2.1",
        "normalize.css": "^8.0.1",
        "pako": "^1.0.11",
        "rxjs": "^6.6.0",
        "typedi": "^0.8.0",
        "webextension-polyfill-ts": "^0.19.0"
    }
}
