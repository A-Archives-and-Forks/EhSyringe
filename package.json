{
    "name": "ehsyringe",
    "displayName": "EhSyringe",
    "version": "3.1.1",
    "description": "E 站注射器，将中文翻译注入到 E 站体内。",
    "author": "EhTagTranslation",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EhTagTranslation/EhSyringe.git"
    },
    "engines": {
        "node": "^20.17.0 || ^22.11.0"
    },
    "packageManager": "pnpm@10.8.1",
    "license": "MIT",
    "bugs": "https://github.com/EhTagTranslation/EhSyringe/issues",
    "homepage": "https://github.com/EhTagTranslation/EhSyringe",
    "type": "module",
    "scripts": {
        "start:monkey": "webpack serve --mode=development --env type=user-script",
        "start:ext": "webpack --mode=development --watch --env type=web-ext",
        "start:chrome": "pnpm run start:ext --env vendor=chrome",
        "start:firefox": "pnpm run start:ext --env vendor=firefox",
        "build": "webpack --mode=production",
        "build:monkey": "pnpm run build --env type=user-script",
        "build:ext": "pnpm run build --env type=web-ext",
        "build:chrome": "pnpm run build:ext --env vendor=chrome && crx pack dist --zip-output releases/ehsyringe.chrome.zip && crx pack dist -o releases/ehsyringe.chrome.crx",
        "build:firefox": "pnpm run build:ext --env vendor=firefox && web-ext build -s dist -a releases -n ehsyringe.firefox.xpi -o && web-ext build -s dist -a releases -n ehsyringe.firefox.zip -o",
        "lint": "eslint",
        "format": "prettier --ignore-path .gitignore --write .",
        "clean": "rimraf dist releases"
    },
    "devDependencies": {
        "@babel/core": "^7.26.10",
        "@babel/plugin-transform-runtime": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "@babel/runtime-corejs3": "^7.27.0",
        "@eslint/js": "^9.25.0",
        "@types/chrome": "^0.0.315",
        "@types/escape-html": "^1.0.4",
        "@types/node": "^22.14.1",
        "@types/tampermonkey": "^5.0.4",
        "@types/webextension-polyfill": "^0.12.3",
        "@webextension-toolbox/webpack-webextension-plugin": "^3.3.1",
        "babel-loader": "^10.0.0",
        "copy-webpack-plugin": "^13.0.0",
        "crx": "^5.0.1",
        "css-loader": "^7.1.2",
        "cssnano": "^7.0.6",
        "eslint": "^9.25.0",
        "eslint-config-prettier": "^10.1.2",
        "execa": "^9.5.2",
        "glob": "^11.0.1",
        "html-webpack-plugin": "^5.6.3",
        "less": "^4.3.0",
        "less-loader": "^12.2.0",
        "postcss": "^8.5.3",
        "postcss-import": "^16.1.0",
        "postcss-loader": "^8.1.1",
        "postcss-preset-env": "^10.1.5",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "semver": "^7.7.1",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.2",
        "tsconfig-paths-webpack-plugin": "^4.2.0",
        "type-fest": "^4.40.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.30.1",
        "web-ext": "^8.5.0",
        "webpack": "^5.99.6",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.1",
        "webpack-userscript": "^2.5.8"
    },
    "dependencies": {
        "core-js": "^3.41.0",
        "emoji-regex": "^10.4.0",
        "escape-html": "^1.0.3",
        "idb-keyval": "^6.2.1",
        "lit-html": "^3.3.0",
        "rxjs": "^7.8.2",
        "tslib": "^2.8.1",
        "typedi": "^0.10.0",
        "webextension-polyfill": "^0.12.0"
    }
}
